# Local: http://localhost:9006
# Production: https://pathway-api.dodon.in
BASE_URL=http://localhost:9006
PORT=9006

# S3 Configuration
S3_ENDPOINT=http://192.168.1.3:2000
S3_BUCKET=pathway
S3_PRIVATE_BUCKET=pathway-private
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_REGION=us-east-1
S3_FILE_URL=https://cdn.example.com/pathway

# Database & Auth
DATABASE_URL=mongodb://127.0.0.1/your-database-name
PAYLOAD_SECRET=YOUR_SECRET_HERE

# Admin Seeding
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your-secure-password

# Email
EMAIL_FROM=info@example.com
EMAIL_SMTP_HOST=localhost
EMAIL_SMTP_PORT=465
EMAIL_SMTP_SECURE=true
EMAIL_SMTP_USER=info@example.com
EMAIL_SMTP_PASS=your-smtp-password

# Zoom Integration
ZOOM_ACCOUNT_ID=your-zoom-account-id
ZOOM_CLIENT_ID=your-zoom-client-id
ZOOM_CLIENT_SECRET=your-zoom-client-secret
ZOOM_USER_ID=me

# Security
# Add production frontend URL in production (e.g., https://pathway.dodon.in)
CORS_ORIGINS=http://localhost:9007,http://localhost:3000

# Frontend
FRONTEND_URL=http://localhost:3000
